#<?cfg paf policy ?>
# cfht-crSplit-master.paf

framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/cfht-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   nSlices: 1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCrSplit
   dir: {
      shortName: CrSplit
      # Following directory info is OVERLAID by cfht-orca.paf:platform  defn
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @CrSplit/000-getajob.paf
   }

   appStage: {
      name: "010-cfht-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @CrSplit/010-cfht-input.paf
   }

   appStage: {
      name: "020-cfht-backgroundEstimation0"
      parallelClass: "lsst.meas.pipeline.BackgroundEstimationStageParallel"
      eventTopic: "None"
      stagePolicy: @CrSplit/020-cfht-backgroundEstimation0.paf
   }

