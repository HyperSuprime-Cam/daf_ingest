#<?cfg paf policy ?>

# ImSim ImgChar master.paf
framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/imsim-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   nSlices:1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownImgChar
   dir: {
      shortName: ImgChar
      # Following directory info is OVERLAID by imsim-orca.paf:platform  defn
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @ImgChar/000-getajob.paf
   }

   appStage: {
      name: "010-imsim-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/010-imsim-input.paf
   }

   appStage: {
      name: "020-sourceDetection"
      parallelClass: "lsst.meas.pipeline.SourceDetectionStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/020-sourceDetection.paf
   }

   appStage: {
      name: "030-sourceMeasurement"
      parallelClass: "lsst.meas.pipeline.SourceMeasurementStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/030-sourceMeasurement.paf
   }

   appStage: {
      name: "040-psfDetermination"
      parallelClass: "lsst.meas.pipeline.PsfDeterminationStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/040-psfDetermination.paf
   }

   appStage: {
      name: "050-wcsDetermination"
      parallelClass: "lsst.meas.pipeline.WcsDeterminationStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/050-wcsDetermination.paf
   }

   appStage: {
      name: "060-wcsVerification"
      parallelClass: "lsst.meas.pipeline.WcsVerificationParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/060-wcsVerification.paf
   }

