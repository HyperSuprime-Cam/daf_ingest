      name: "090-imsim-output"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @ImgChar/090-imsim-output.paf
   }

   appStage: {
      name: "100-jobdone"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @ImgChar/100-jobdone.paf
   }

   failureStage: {
      name: "110-failure"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @ImgChar/110-failure.paf
   }

}
