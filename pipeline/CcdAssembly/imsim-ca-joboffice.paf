#<?cfg paf policy ?>
name:  CcdAssembly
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      postISRAvailable
    pipelineEvent:       CaJob
    stopEvent:           workflowShutdown
}

schedule: {
    trigger: {
        datasetType: postISR
        id: {
            name: visit
        }
        id: {
            name: snap
        }
        id: {
            name: raft
        }
        id: {
            name: sensor
        }
        id: {
            name: channel
            value: "0,0"
            value: "0,1"
            value: "0,2"
            value: "0,3"
            value: "0,4"
            value: "0,5"
            value: "0,6"
            value: "0,7"
            value: "1,0"
            value: "1,1"
            value: "1,2"
            value: "1,3"
            value: "1,4"
            value: "1,5"
            value: "1,6"
            value: "1,7"
        }
    }

    job: {
        identity: {
            datasetType: postISRCCD
            id: visit
            id: snap
            id: raft
            id: sensor
        }
        input: {
            datasetType: postISR
            id: {
              name: visit
            }
            id: {
              name: snap
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
            id: {
              name: channel
              value: "0,0"
              value: "0,1"
              value: "0,2"
              value: "0,3"
              value: "0,4"
              value: "0,5"
              value: "0,6"
              value: "0,7"
              value: "1,0"
              value: "1,1"
              value: "1,2"
              value: "1,3"
              value: "1,4"
              value: "1,5"
              value: "1,6"
              value: "1,7"
            }
        }
        output: {
            datasetType: postISRCCD
            id: {
              name: visit
            }
            id: {
              name: snap
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
    }
}
