#<?cfg paf policy ?>
name:  CcdAssembly
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      postISRAvailable
    pipelineEvent:       CaJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: postISR
        id: {
            name: amp
            min: 0
            lim: 2
        }
    }

    job: {
        identity: {
            datasetType: postISRCCD
            id: visit
            id: filter
            id: ccd
        }
        input: {
            datasetType: postISR
            id: {
              name: visit
            }
            id: {
              name: filter
            }
            id: {
              name: ccd
            }
            id: {
              name: amp
              min: 0
              lim: 2
            }
        }
        output: {
            datasetType: postISRCCD
            id: {
              name: visit
            }
            id: {
              name: filter
            }
            id: {
              name: ccd
            }
        }
    }
}
