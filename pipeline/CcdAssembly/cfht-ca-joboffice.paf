#<?cfg paf policy ?>
name:  CcdAssembly
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      postISRAvailable
    pipelineEvent:       CaJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: postISR
        id: amp
    }

    job: {
        identity: {
            datasetType: postISRCCD
            id: visit
            id: filter
            id: ccd
        }
        input: {
            datasetType: postISR
            id: visit
            id: filter
            id: ccd
            id: amp
        }
        output: {
            datasetType: postISRCCD
            id: visit
            id: filter
            id: ccd
        }
    }
}
