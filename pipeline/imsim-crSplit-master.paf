#<?cfg paf policy ?>
# imsim-crSplit-master.paf

framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/imsim-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   nSlices: 1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCrSplit
   dir: {
      shortName: CrSplit
      # Following directory info is OVERLAID by imsim-orca.paf:platform  defn
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @CrSplit/000-getajob.paf
   }

   appStage: {
      name: "010-imsim-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @CrSplit/010-imsim-input.paf
   }

   appStage: {
      name: "020-imsim-backgroundEstimation0"
      parallelClass: "lsst.meas.pipeline.BackgroundEstimationStageParallel"
      eventTopic: "None"
      stagePolicy: @CrSplit/020-imsim-backgroundEstimation0.paf
   }

