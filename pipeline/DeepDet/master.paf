#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownDeepDet
   dir: {
      shortName: DeepDet
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "triggerDeepDetEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      stageName: "lsst.coadd.pipeline.SkyMapToExposureStage"
      eventTopic: "None"
      stagePolicy: @020-skyMapToExposure.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.SourceDetectionStage"
      eventTopic: "None"
      stagePolicy: @030-sourceDetection.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.SourceMeasurementStage"
      eventTopic: "None"
      stagePolicy: @040-sourceMeasurement.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @050-output.paf
   }

}
