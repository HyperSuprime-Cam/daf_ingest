#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCrSplit
   dir: {
      shortName: CrSplit
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.InputStage"
      eventTopic: "triggerCrSplitEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.BackgroundEstimationStage"
      eventTopic: "None"
      stagePolicy: @020-backgroundEstimation.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.CrRejectStage"
      eventTopic: "None"
      stagePolicy: @030-crReject.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.SimpleDiffImStage"
      eventTopic: "None"
      stagePolicy: @040-simpleDiffIm.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.SourceDetectionStage"
      eventTopic: "None"
      stagePolicy: @050-sourceDetection.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.crSplitCombineStage"
      eventTopic: "None"
      stagePolicy: @060-crSplitCombine.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @070-output.paf
   }

}
