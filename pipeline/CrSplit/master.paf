#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCrSplit
   dir: {
      shortName: CrSplit
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "triggerCrSplitEvent"
      stagePolicy: @010-image0Input.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @020-image1Input.paf
   }

   appStage: {
      stageName: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      eventTopic: "None"
      stagePolicy: @030-visitMetadata.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.MaskCosmicsStage.MaskCosmicsStage"
      eventTopic: "None"
      stagePolicy: @040-maskCosmics.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.SimpleDiffImStage.SimpleDiffImStage"
      eventTopic: "None"
      stagePolicy: @050-simpleDiffIm.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.DifferenceDetectionStage.DifferenceDetectionStage"
      eventTopic: "None"
      stagePolicy: @060-differenceDetection.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.MaskAndSumStage.MaskAndSumStage"
      eventTopic: "None"
      stagePolicy: @070-maskAndSum.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @080-visitImageOutput.paf
   }
}
