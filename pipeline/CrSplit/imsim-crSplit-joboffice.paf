#<?cfg paf policy ?>
# imsim-crSplit-joboffice.paf

name:  CrSplit
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      postISRCCDAvailable
    pipelineEvent:       CrSplitJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: postISRCCD
        id: {
            name: sensor
            min:0
            lim:2
        }
    }

    job: {
        identity: {
            datasetType: postISRCCD
            id: visit
            id: filter
            id: snap
            id: raft
            id: sensor
        }
        input: {
            datasetType: postISRCCD
            id: visit
            id: filter
            id: snap
            id: raft
            id: sensor
        }
        output: {
            datasetType: visitim
            id: visit
            id: filter
            id: snap
            id: raft
            id: sensor
        }
    }
}
