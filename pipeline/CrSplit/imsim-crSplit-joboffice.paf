#<?cfg paf policy ?>
# imsim-crSplit-joboffice.paf

name:  CrSplit
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      postISRCCDAvailable
    pipelineEvent:       CrSplitJob
    stopEvent:           workflowShutdown
}

schedule: {
    trigger: {
        datasetType: postISRCCD
        id: {
            name: visit
        }
        id: {
            name: snap
            min: 0
            lim: 2
        }
        id: {
            name: raft
        }
        id: {
            name: sensor
        }
        id: {
            name: sensor
        }
    }

    job: {
        input: {
            datasetType: postISRCCD
            id: {
              name: visit
            }
            id: {
              name: snap
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {
            datasetType: visitim
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
    }
}
