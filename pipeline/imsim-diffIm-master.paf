#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/pipeline/imsim-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}


execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownDiffIm
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: DiffIm
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "triggerDiffImEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      #stageName: "lsst.datarel.IdentifySkyTilesStage"
      name: "lsst.datarel.IdentifySkyTilesStage"
      parallelClass: "lsst.datarel.IdentifySkyTilesStageParallel"
      eventTopic: "None"
      stagePolicy: @020-identifySkyTiles.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @030-templateInput.paf
   }

   appStage: {
      #stageName: "lsst.coadd.pipeline.SkyMapToExposureStage"
      name: "lsst.coadd.pipeline.SkyMapToExposureStage"
      parallelClass: "lsst.coadd.pipeline.SkyMapToExposureStageParallel"
      eventTopic: "None"
      stagePolicy: @040-SkyMapToExposure.paf
   }

   appStage: {
      #stageName: "lsst.ip.pipeline.DiffImStage"
      name: "lsst.ip.pipeline.DiffImStage"
      parallelClass: "lsst.ip.pipeline.DiffImStageParallel"
      eventTopic: "None"
      stagePolicy: @050-diffIm.paf
   }

   appStage: {
      #stageName: "lsst.meas.pipeline.SourceDetectionStage"
      name: "lsst.meas.pipeline.SourceDetectionStage"
      parallelClass: "lsst.meas.pipeline.SourceDetectionStageParallel"
      eventTopic: "None"
      stagePolicy: @060-sourceDetection.paf
   }

   appStage: {
      #stageName: "lsst.meas.pipeline.SourceMeasurementStage"
      name: "lsst.meas.pipeline.SourceMeasurementStage"
      parallelClass: "lsst.meas.pipeline.SourceMeasurementStageParallel"
      eventTopic: "None"
      stagePolicy: @070-sourceMeasurement.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.OutputStage"
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @080-output.paf
   }

}
