#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownSFM
   dir: {
      shortName: SFM
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "triggerSFMEvent"
      stagePolicy: @010-imageInput.paf
   }

   appStage: {
      stageName: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      eventTopic: "None"
      stagePolicy: @020-visitMetadata.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.DetectMeasureStage.DetectMeasureStage"
      eventTopic: "None"
      stagePolicy: @030-detectMeasure.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @040-sourceOutput.paf
   }
}
