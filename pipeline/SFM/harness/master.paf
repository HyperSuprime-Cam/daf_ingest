#<?cfg paf policy ?>

execute: {
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   nSlices: 1
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   executionMode: "oneloop"
   # Be quite verbose
   #logThreshold: -3
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownSFM

   dir: {
      shortName: SFM
      defaultRoot: .
      # runDirPattern: "./%(runid)s"
      runDirPattern: "./"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

  appStage: {
      name: "lsst.ctrl.sched.pipeline.GetAJob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @000-isrGetajob.paf
   }
 
   appStage: {
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @010-Input.paf
   }

   appStage: {
      name: "lsst.meas.pipeline.SourceDetectionStage"
      parallelClass: "lsst.meas.pipeline.SourceDetectionStageParallel"
      eventTopic: "None"
      stagePolicy: @020-sourceDetection.paf
   }

   appStage: {
      name: "lsst.meas.pipeline.SourceMeasurementStage"
      parallelClass: "lsst.meas.pipeline.SourceMeasurementStageParallel"
      eventTopic: "None"
      stagePolicy: @030-sourceMeasurement.paf
   }

   appStage: {
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @040-output.paf
   }

