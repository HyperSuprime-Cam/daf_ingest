#<?cfg paf policy ?>
# cfht-crSplit-joboffice.paf

name:  SFM
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      calexpAvailable
    pipelineEvent:       SFMJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: calexp
        id: filter
        id: visit
        id: ccd
    }

    job: {
        input: {
            datasetType: calexp
            id: filter
            id: visit
            id: ccd
        }
        output: {
            datasetType: src
            id: filter
            id: visit
            id: ccd
        }
    }
}
