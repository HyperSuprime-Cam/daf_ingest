#<?cfg paf policy ?>
# cfht-crSplit-joboffice.paf

name:  SFM
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      calexpAvailable
    pipelineEvent:       SFMJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: calexp
        id: {
            name: filter
            }
        id: {
            name: visit
            }
        id: {
            name: ccd
            }
    }

    job: {
        input: {
            datasetType: calexp
            id: {
              name: visit
            }
            id: {
              name: filter
            }
            id: {
              name: ccd
            }
        }
        output: {
            datasetType: src
            id: {
              name: visit
            }
            id: {
              name: filter
            }
            id: {
              name: ccd
            }
        }
    }
}
