#<?cfg paf policy ?>
# imsim-sfm-joboffice.paf

name:  SFM
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      calexpAvailable
    pipelineEvent:       SFMJob
    stopEvent:           workflowShutdown
}

schedule: {
    trigger: {
        datasetType: calexp
    }

    job: {
        input: {
            datasetType: calexp
            id: {
              name: visit
            }
            id: {
              name: snap 
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        input: {
            datasetType: psf
            id: {
              name: visit
            }
            id: {
              name: snap 
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {
            datasetType: src
            id: {
              name: visit
            }
            id: {
              name: snap 
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
    }
}
