#<?cfg paf policy ?>
# imsim-sfm-joboffice.paf

name:  SFM
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      calexpAvailable
    pipelineEvent:       SfmJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: calexp
        id: {
            name: scienceExposure
        }
    }

    job: {
        input: {
            datasetType: calexp
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {
            datasetType: sourceSet    TBD
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
    }
}
