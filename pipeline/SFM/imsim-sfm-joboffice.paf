#<?cfg paf policy ?>
# imsim-sfm-joboffice.paf

name:  SFM
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      calexpAvailable
    pipelineEvent:       SFMJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: calexp
        id: visit
        id: field
        id: raft
        id: sensor
    }

    job: {
        input: {
            datasetType: calexp
            id: visit
            id: field
            id: raft
            id: sensor
        }
        output: {
            datasetType: src
            id: visit
            id: field
            id: raft
            id: sensor
        }
    }
}
