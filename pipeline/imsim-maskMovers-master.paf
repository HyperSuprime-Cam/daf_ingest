#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownMaskMovers
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: MaskMovers
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "triggerMaskMoversEvent"
      stagePolicy: @010-imageInput.paf
   }

   appStage: {
      #stageName: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      name: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      parallelClass: "lsst.datarel.VisitMetadataStage.VisitMetadataStageParallel"
      eventTopic: "None"
      stagePolicy: @020-visitMetadata.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @030-movingSourcesInput.paf
   }

   appStage: {
      #stageName: "lsst.ip.pipeline.MaskSourcesStage.MaskSourcesStage"
      name: "lsst.ip.pipeline.MaskSourcesStage.MaskSourcesStage"
      parallelClass: "lsst.ip.pipeline.MaskSourcesStage.MaskSourcesStageParallel"
      eventTopic: "None"
      stagePolicy: @040-maskSources.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.OutputStage"
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @050-maskedExposureOutput.paf
   }
}
