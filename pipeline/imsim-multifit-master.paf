#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/imsim-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownMultifit
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: Multifit
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "TransformDetectionStage"
      parallelClass: "lsst.meas.pipeline.TransformDetectionStageParallel"
      eventTopic: "triggerMultifitEvent"
      stagePolicy: @010-transformDetection.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @020-postageStampStackInput.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @030-astromModelInput.paf
   }

   appStage: {
      name: "MultifitStage"
      parallelClass: "lsst.meas.pipeline.MultifitStageParallel"
      eventTopic: "None"
      stagePolicy: @040-multifit.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.OutputStage"
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @050-objectMeasurementOutput.paf
   }

   appStage: {
   	  name: "ForcedPhotometryStage"
      parallelClass: "lsst.meas.pipeline.ForcedPhotometryStageParallel"
      eventTopic: "None"
      stagePolicy: @060-forcedPhotom.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.OutputStage"
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @070-forcedSourceOutput.paf
   }
}
