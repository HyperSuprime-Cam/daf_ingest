#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownMultifit
   dir: {
      shortName: Multifit
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.datarel.ExposureStackStage.ExposureStackStage"
      eventTopic: "triggerMultifitEvent"
      stagePolicy: @010-exposureStack.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @020-postageStampStackInput.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @030-astromModelInput.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.MultifitStage.MultifitStage"
      eventTopic: "None"
      stagePolicy: @040-multifit.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @050-objectMeasurementOutput.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.ForcedPhotomStage.ForcedPhotomStage"
      eventTopic: "None"
      stagePolicy: @060-forcedPhotom.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @070-forcedSourceOutput.paf
   }
}
