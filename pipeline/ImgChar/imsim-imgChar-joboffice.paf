#<?cfg paf policy ?>
# imsim-imgChar-joboffice.paf

name:  ImgChar
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      visitimAvailable
    pipelineEvent:       ImgCharJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: visitim
        id: {
            name: visitExposure
        }
    }

    job: {
        input: {
            datasetType: visitim
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {
            datasetType: calexp
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {  					TBD
            datasetType: cellSet
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
        output: {  					TBD
            datasetType: sourceMatchSet
            id: {
              name: visit
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
        }
    }
}
