#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownImgChar
   dir: {
      shortName: ImgChar
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.InputStage"
      eventTopic: "triggerImgCharEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.SourceDetectionStage"
      eventTopic: "None"
      stagePolicy: @020-sourceDetection.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.SourceMeasurementStage"
      eventTopic: "None"
      stagePolicy: @030-sourceMeasurement.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.PsfDeterminationStage"
      eventTopic: "None"
      stagePolicy: @040-psfDetermination.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.WcsDeterminationStage"
      eventTopic: "None"
      stagePolicy: @050-wcsDetermination.paf
   }

   appStage: {
      stageName: "lsst.sdqa.WcsVerificationStage"
      eventTopic: "None"
      stagePolicy: @060-wcsVerification.paf
   }

   appStage: {
      stageName: "lsst.meas.pipeline.PhotoCalStage"
      eventTopic: "None"
      stagePolicy: @070-photoCal.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.ExposureGenerationStage"
      eventTopic: "None"
      stagePolicy: @080-exposureGeneration.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @090-output.paf
   }

}
