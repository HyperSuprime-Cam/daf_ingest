#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCoaddGen
   dir: {
      shortName: CoaddGen
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.InputStage"
      eventTopic: "triggerCoaddGenEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      stageName: "lsst.datarel.GenerateSkyTileStage"
      eventTopic: "None"
      stagePolicy: @020-generateSkyTile.paf
   }

   appStage: {
      stageName: "lsst.coadd.pipeline.ExposureToSkyMapStage"
      eventTopic: "None"
      stagePolicy: @030-exposureToSkyMap.paf
   }

   appStage: {
      stageName: "lsst.coadd.pipeline.AddSkyMapStage"
      eventTopic: "None"
      stagePolicy: @040-addSkyMap.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IoStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @050-output.paf
   }

}
