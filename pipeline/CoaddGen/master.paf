#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCoaddGen
   dir: {
      shortName: CoaddGen
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.datarel.SkyTileMetadataStage.SkyTileMetadataStage"
      eventTopic: "triggerCoaddGenEvent"
      stagePolicy: @010-skyTileMetadata.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @020-maskedExposureInput.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @030-psfMatchKernelsInput.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @040-coaddTileInput.paf
   }

   appStage: {
      stageName: "lsst.coadd.pipeline.CoaddGenerationStage.CoaddGenerationStage"
      eventTopic: "None"
      stagePolicy: @050-coaddGeneration.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @060-coaddTileOutput.paf
   }
}
