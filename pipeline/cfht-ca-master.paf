#<?cfg paf policy ?>

# CFHT-LS CcdAssembly master.paf
framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/cfht-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   nSlices: 1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownCA
   dir: {
      shortName: CA
      # Following info will be OVERLAID by any cfht-orca.paf:platform defns
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/000-getajob.paf
   }

   appStage: {
      name: "010-cfht-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/010-cfht-input.paf
   }

   appStage: {
      name: "020-assembleCcd"
      parallelClass: "lsst.ip.pipeline.IsrCcdAssemblyStageParallel"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/020-assembleCcd.paf
   }

   appStage: {
      name: "030-isrCcdDefect"
      parallelClass: "lsst.ip.pipeline.IsrCcdDefectStageParallel"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/030-isrCcdDefect.paf
   }

   appStage: {
      name: "035-isrCcdSdqa"
      parallelClass: "lsst.ip.pipeline.IsrCcdSdqaStageParallel"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/035-isrCcdSdqa.paf
   }

   appStage: {
      name: "040-cfht-output"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/040-cfht-output.paf
   }

   appStage: {
      name: "050-jobDone"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/050-jobDone.paf
   }

   failureStage: {
      name: "060-failure"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @CcdAssembly/060-failure.paf
   }

}
