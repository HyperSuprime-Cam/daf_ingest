#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownAstroCal
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: AstroCal
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "lsst.datarel.SkyTileMetadataStage.SkyTileMetadataStage"
      parallelClass: "lsst.datarel.SkyTileMetadataStage.SkyTileMetadataStageParallel"
      eventTopic: "triggerAstroCalEvent"
      stagePolicy: @010-skyTileMetadata.paf
   }

   appStage: {
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @020-sourceInput.paf
   }

   appStage: {
      name: "lsst.astrocal.pipeline.AstroCalStage.AstroCalStage"
      parallelClass: "lsst.astrocal.pipeline.AstroCalStage.AstroCalStageParallel"
      eventTopic: "None"
      stagePolicy: @030-backgroundEstimation.paf
   }

   appStage: {
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @040-astroModelOutput.paf
   }
}
