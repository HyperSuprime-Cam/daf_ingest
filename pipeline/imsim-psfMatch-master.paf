#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/pipeline/imsim-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}

execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownPSFMatch
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: PSFMatch
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.InputStage"
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "triggerPSFMatchEvent"
      stagePolicy: @010-input.paf
   }

   appStage: {
      #stageName: "lsst.coadd.pipeline.PsfMatchStage"
      name: "lsst.coadd.pipeline.PsfMatchStage"
      parallelClass: "lsst.coadd.pipeline.PsfMatchStageParallel"
      eventTopic: "None"
      stagePolicy: @020-psfMatch.paf
   }

   appStage: {
      #stageName: "lsst.datarel.GenerateSkyTileStage"
      name: "lsst.datarel.GenerateSkyTileStage"
      parallelClass: "lsst.datarel.GenerateSkyTileStageParallel"
      eventTopic: "None"
      stagePolicy: @030-generateSkyTile.paf
   }

   appStage: {
      #stageName: "lsst.coadd.pipeline.ExposureToSkyMapStage"
      name: "lsst.coadd.pipeline.ExposureToSkyMapStage"
      parallelClass: "lsst.coadd.pipeline.ExposureToSkyMapStageParallel"
      eventTopic: "None"
      stagePolicy: @040-exposureToSkyMap.paf
   }

   appStage: {
      #stageName: "lsst.pex.harness.IOStage.OutputStage"
      name: "lsst.pex.harness.IOStage.OutputStage"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @050-output.paf
   }

}
