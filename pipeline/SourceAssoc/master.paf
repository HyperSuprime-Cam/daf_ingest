#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownSourceAssoc
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   dir: {
      shortName: SourceAssoc
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      #stageName: "lsst.ap.pipeline.SourceAssocStage.SourceAssocStage"
      name: "lsst.ap.pipeline.SourceAssocStage.SourceAssocStage"
      parallelClass: "lsst.ap.pipeline.SourceAssocStage.SourceAssocStageParallel"
      eventTopic: "triggerSourceAssocEvent"
      stagePolicy: @010-sourceAssoc.paf
   }
}
