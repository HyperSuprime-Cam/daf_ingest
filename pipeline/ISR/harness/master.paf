execute: {
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   nSlices: 1
   # To terminate after predetermined count: add 'executionMode: "oneloop"'
   executionMode: "oneloop"
   # Be quite verbose
   #logThreshold: -3
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownISR
   dir: {
      shortName: ISR
      defaultRoot: .
      # Path to root Run directory
      #runDirPattern: "../../%(runid)s/%(shortname)s"
      runDirPattern: "."
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      name: "lsst.pex.harness.IOStage.InputStage"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "triggerISREvent"
      stagePolicy: @010-Input.paf
   }

   appStage: {
      name: "lsst.ip.pipeline.MakeCameraGeomStage"
      parallelClass: "lsst.ip.pipeline.MakeCameraStageParallel"
      eventTopic: "None"
      stagePolicy: @020-makeCameraGeom.paf
   }

