#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownISR
   dir: {
      shortName: ISR
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "triggerISREvent"
      stagePolicy: @010-imageInput.paf
   }

   appStage: {
      stageName: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      eventTopic: "None"
      stagePolicy: @020-visitMetadata.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.MetadataStages.TransformMetadataStage"
      eventTopic: "None"
      stagePolicy: @030-transformMetadata.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.MetadataStages.ValidateMetadataStage"
      eventTopic: "None"
      stagePolicy: @040-transformMetadata.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.IdentifyCalibrationProductsStage.IdentifyCalibrationProductsStage"
      eventTopic: "None"
      stagePolicy: @050-identifyCalibrationProducts.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @060-calibrationInput.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.IsrStage"
      eventTopic: "None"
      stagePolicy: @070-isr.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @080-postIsrImageOutput.paf
   }
}
