#<?cfg paf policy ?>

# imsim-isr-joboffice.paf

name:  ISR
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      RawAvailable
    pipelineEvent:       ISRJob
    stopEvent:           workflowShutdown
}

schedule: {
    trigger: {
        datasetType: raw
    }

    job: {
        input: {
            datasetType: raw
            id: {
              name: visit
            }
            id: {
              name: snap
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
            id: {
              name: channel
            }
        }
        output: {
            datasetType: postISR
            id: {
              name: visit
            }
            id: {
              name: snap
            }
            id: {
              name: raft
            }
            id: {
              name: sensor
            }
            id: {
              name: channel
            }
        }
    }
}
