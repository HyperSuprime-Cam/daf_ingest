#<?cfg paf policy ?>

name:  ISR
persist.dir:  %(schedroot)s/%(name)s-joboffice

listen: {
    brokerHostName:      lsst8.ncsa.uiuc.edu
    dataReadyEvent:      RawAvailable
    pipelineEvent:       IsrJob
    stopEvent:           JobOfficeStop
}

schedule: {
    trigger: {
        datasetType: raw
    }

    job: {
        input: {
            datasetType: raw
            id: visit
            id: filter
            id: snap
            id: raft
            id: sensor
            id: channel
        }
        output: {
            datasetType: postISR
            id: visit
            id: filter
            id: snap
            id: raft
            id: sensor
            id: channel
        }
    }
}
