#<?cfg paf policy ?>

execute: {
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   nSlices: 1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownSFM

   dir: {
      shortName: SFM
      defaultRoot: .
      # runDirPattern: "./%(runid)s"
      runDirPattern: "../../JOTest"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

  appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SFM/000-getajob.paf
   }
 
   appStage: {
      name: "010-cfht-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @SFM/010-cfht-input.paf
   }

   appStage: {
      name: "020-sourceDetection"
      parallelClass: "lsst.meas.pipeline.SourceDetectionStageParallel"
      eventTopic: "None"
      stagePolicy: @SFM/020-sourceDetection.paf
   }

   appStage: {
      name: "030-sourceMeasurement"
      parallelClass: "lsst.meas.pipeline.SourceMeasurementStageParallel"
      eventTopic: "None"
      stagePolicy: @SFM/030-sourceMeasurement.paf
   }

   appStage: {
      name: "040-computeSourceSkyCoords"
      parallelClass: "lsst.meas.pipeline.ComputeSourceSkyCoordsStageParallel"
      eventTopic: "None"
      stagePolicy: @SFM/040-computeSourceSkyCoords.paf
   }

   appStage: {
      name: "050-cfht-output"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @SFM/050-cfht-output.paf
   }

   appStage: {
      name: "060-jobdone"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SFM/060-jobdone.paf
   }

   failureStage: {
      name: "070-failure"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SFM/070-failure.paf
   }
}
