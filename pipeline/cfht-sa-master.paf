framework: {
   type: standard
   environment: "$DATAREL_DIR/bin/runOrca/cfht-setupForOrcaUse.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.py"
}


execute: {
   # To run in nonMPI setup: add 'nSlices: 1' else need file: nodelist.src
   nSlices: 1
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownSA
   dir: {
      shortName: SA
      # Following directory info is OVERLAID by cfht-orca.paf:platform  defn
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: update
      output: output
      update: update
      scratch: scratch
   }

  appStage: {
      name: "000-getajob"
      parallelClass: "lsst.ctrl.sched.pipeline.GetAJobParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/000-getajob.paf
   }
 
   appStage: {
      name: "010-cfht-input"
      parallelClass: "lsst.pex.harness.IOStage.InputStageParallel"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/010-cfht-input.paf
   }

   appStage: {
      name: "020-sourceClustering"
      parallelClass: "lsst.ap.cluster.sourceClusteringStage.SourceClusteringParallel"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/020-sourceClustering.paf
   }

   appStage: {
      name: "030-sourceClusterAttributes"
      parallelClass: "lsst.ap.cluster.sourceClusterAttributesStage.SourceClusterAttributesParallel"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/030-sourceClusterAttributes.paf
   }
   appStage: {
      name: "090-cfht-output"
      parallelClass: "lsst.pex.harness.IOStage.OutputStageParallel"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/090-cfht-output.paf
   }
   appStage: {
      name: "100-jobDone"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/100-jobDone.paf
   }

   failureStage: {
      name: "110-failure"
      parallelClass: "lsst.ctrl.sched.pipeline.JobDoneParallelProcessing"
      eventTopic: "None"
      stagePolicy: @SourceAssoc/110-failure.paf
   }
}

