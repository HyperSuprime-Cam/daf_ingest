#<?cfg paf policy ?>

requires: {
   database: {
      type: MySQL
   }
   platform: {
      minCoreCount: 1
   }
}

framework: {
   type: standard
   environment: "$DATAREL_DIR/etc/setup.sh"
   exec: "$PEX_HARNESS_DIR/bin/launchPipeline.sh"
}

execute: {
   localLogMode: true
   eventBrokerHost: "lsst8.ncsa.uiuc.edu"
   shutdownTopic: shutdownDiffPhotom
   dir: {
      shortName: DiffPhotom
      defaultRoot: .
      runDirPattern: "../../%(runid)s/%(shortname)s"
      work: work
      input: input
      output: output
      update: update
      scratch: scratch
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "triggerDiffPhotomEvent"
      stagePolicy: @010-diffImageInput.paf
   }

   appStage: {
      stageName: "lsst.datarel.VisitMetadataStage.VisitMetadataStage"
      eventTopic: "None"
      stagePolicy: @020-visitMetadata.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.InputStage"
      eventTopic: "None"
      stagePolicy: @030-detectionsInput.paf
   }

   appStage: {
      stageName: "lsst.ip.pipeline.ForcedPhotomStage.ForcedPhotomStage"
      eventTopic: "None"
      stagePolicy: @040-forcedPhotom.paf
   }

   appStage: {
      stageName: "lsst.pex.harness.IOStage.OutputStage"
      eventTopic: "None"
      stagePolicy: @050-forcedDiaSourcesOutput.paf
   }
}
